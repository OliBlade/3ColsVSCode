{
  "name": "3cols-vscode",
  "displayName": "3Cols - Code Snippets",
  "description": "Code Snippets from 3Cols using the 3Cols API. Access to your personal and team Snippets across all your devices.",
  "version": "1.0.0",
  "publisher": "3Cols",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "3Cols",
    "snippets",
    "code",
    "snippet",
    "cose library"
  ],
  "galleryBanner": {
    "color": "#2980b9",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:3cols-vscode.3ColsGet",
    "onCommand:3cols-vscode.3ColsSave"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "3cols-vscode.3ColsGet",
        "title": "3Cols Get Snippet"
      },
      {
        "command": "3cols-vscode.3ColsSave",
        "title": "3Cols Save Snippet"
      }
    ],
    "configuration": {
      "title": "3Cols",
      "properties": {
        "3cols.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your 3Cols API Key"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "3cols-vscode.3ColsGet",
          "group": "1_3Cols"
        },
        {
          "command": "3cols-vscode.3ColsSave",
          "group": "1_3Cols",
          "when": "editorFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "3cols-vscode.3ColsSave",
          "group": "1_3Cols",
          "when": "editorFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash.find": "^4.6.6",
    "@types/lodash.orderby": "^4.6.6",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "lodash.find": "^4.6.0",
    "lodash.orderby": "^4.6.0"
  }
}
